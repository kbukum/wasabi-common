{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "wasabi-common/lib/*": [
        "./src/*"
      ]
    },
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "pretty": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "./lib"
  },
  "exclude": [
    "lib",
    "tools",
    "./node_modules/**/*"
  ]
}